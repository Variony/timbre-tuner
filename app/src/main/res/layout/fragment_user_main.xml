<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:background="@android:color/transparent"
        />

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7">
    <TextView
        android:text="Title:"
        android:layout_width="0dip"
        android:layout_weight="50"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="20dp" />
        <TextView
            android:text="Score:"
            android:layout_width="0dip"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="15">
    <TextView
        android:id="@+id/user_view_title"
        android:layout_width="0dip"
        android:layout_weight="50"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="45dp"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/user_view_score"
            android:layout_width="0dip"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="45dp"
            android:textStyle="bold"
            />
    </LinearLayout>>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        />



    <TextView
        android:text="Comment:"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dip"
        android:textAlignment="center"
        android:textSize="18dp"

        />

    <TextView
        android:id="@+id/user_view_comment"
        android:layout_width="match_parent"
        android:layout_weight="25"
        android:layout_height="0dip"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="22dp"
        />


    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        />

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="18">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="40"
            android:src="@drawable/play"
            >
        </ImageView>
        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:text="Play Target"
            android:id="@+id/btn_play_target_user"
            android:textSize="24dp"
            android:background="@drawable/btn_bg"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:background="@android:color/transparent"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="18"
        android:text="User Record"
        android:textSize="24dp"
        android:id="@+id/btn_try_user"
        android:background="@drawable/btn_bg"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"/>
    <!--  android:layout_below="@id/mmAddButton"/> -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:background="@android:color/transparent"
        />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="18"
        android:textSize="24dp"
        android:text="View Rank"
        android:id="@+id/btn_viewrank_user"
        android:background="@drawable/btn_bg"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:background="@android:color/transparent"
        />
</LinearLayout>